<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        tools:context="com.industries.sarker.randochat.LoginActivity"
        android:layout_gravity="center_horizontal|top">

        <ImageView
            android:id="@+id/dice_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:src="@drawable/dice_background"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/start_chat_button" />

        <EditText
            android:id="@+id/username_edittext"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_border_orange"
            android:textSize="20sp"
            android:hint="Enter a username"
            android:textAlignment="center"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:padding="10dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="54dp" />

        <Button
            android:id="@+id/start_chat_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners_orange"
            android:text="Start Chat"
            android:textColor="@android:color/white"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/username_edittext"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</FrameLayout>

